<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".UI.Carrrito.Orden.MapsDisign">

    <fragment
        android:id="@+id/fragmentMap_Cliente"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="5dp" />

    <ImageView
        android:id="@+id/imagenINDIQUEITOR"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:src="@drawable/ic_baseline_add_"
        android:layout_gravity="center"/>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        app:cardCornerRadius="30dp">
        <TextView
            android:id="@+id/textDireccionMap"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="calle y direccion deciocion"
            android:textAlignment="center"
            android:maxLines="2"
            android:padding="10dp"/>

    </androidx.cardview.widget.CardView>
    <Button
        android:id="@+id/buttonOn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_margin="20dp"
        android:layout_gravity="bottom"
        android:background="@drawable/gradiente"
        android:textStyle="bold"
        android:text="agregar direccion"/>

</androidx.coordinatorlayout.widget.CoordinatorLayout>